{
	"compilerOptions": {
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["es6", "dom"],
		"mapRoot": "./",
		"rootDirs": ["./src", "../shared"],
		"outDir": "./dist",
		"sourceMap": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"typeRoots": ["../node_modules/@types"]
	},
	"include": ["src/**/*", "../shared/*"],
	"exclude": ["node_modules"]
}
